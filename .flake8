[flake8]
max-line-length = 95
ignore =
    E116,
    E241,
    E251,
    E741,
    W503,
    W504,
    I101,
    B006,
    B023,
    SIM102,
    SIM103,
    SIM105,
    SIM110,
    SIM113,
    SIM114,
    SIM115,
    SIM117,
    SIM223,
    SIM300,
    SIM401,
    SIM904,
    SIM905,
    SIM907,
exclude =
    .git,
    .tox,
    .venv,
    tests/roots/*,
    build/*,
    doc/_build/*,
    sphinx/search/*,
    doc/usage/extensions/example*.py,
application-import-names = sphinx
import-order-style = smarkets
per-file-ignores =
    tests/*: E501
